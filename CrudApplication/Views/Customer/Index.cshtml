@model IEnumerable<CrudApplication.Models.ViewModels.CustomerViewModel>
@{ 

}
<div>
    <h2>Customers Data</h2>

    <p style="text-align:right;margin-right:20px;">
        <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
    </p>

    <table class=" table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Address</th>
            <th>State</th>
            <th>City</th>
            <th>Action</th>
        </tr>
        @foreach (var cus in Model)
        {
            <tr>
                <td>@cus.Id</td>
                <td>@cus.Name</td>
                <td>@cus.Email</td>
                <td>@cus.Mobile_No</td>
                <td>@cus.Address</td>
                <td>@cus.State</td>
                <td>@cus.City</td>
                <td>
                    <a asp-action="Update" asp-controller="Customer" asp-route-id="@cus.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-controller="Customer" asp-route-id="@cus.Id" class="btn btn-danger" onclick="return confirm('Do you Want to Delete')">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>